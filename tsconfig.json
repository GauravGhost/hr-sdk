{
    "compilerOptions": {
      "target": "es2018",
      "declaration": true,
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "./lib",
      "declarationDir": "./dist/types"
    },
    "include": ["lib"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
